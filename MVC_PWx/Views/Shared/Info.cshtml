@{ 
    Layout = "~/Views/Shared/_Empty.cshtml";
    ViewBag.Title = "Info";
}

@if (ViewBag.Partial == null)
{
    <div class="content-box text-center transparent">
        <h2 class="red text-bold">@ViewBag.Header</h2>
        <h3>@ViewBag.Message</h3>
        <div class="flex-container center">
            @Html.Raw(ViewBag.Html)
        </div>
    </div>
}
else
{
    <div id="partial" style="width:80%;height:80%;margin:0 auto">

    </div>
}

@section scripts {
    <script type="text/javascript">
        var partialAction = '@HttpUtility.UrlDecode(ViewBag.Partial)';

        $.backstretch("@Url.Content("~/Content/img/info-background.png")", {
            speed: 500
        });

        $(document).ready(function () {
            if (!isEmpty(partialAction)) {
                console.log(partialAction)
                $('#partial').load(partialAction);
            }
        })
    </script>
}