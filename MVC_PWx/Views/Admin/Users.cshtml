@model List<ApplicationUser>
@{
    ViewBag.Title = "Users";
}

<div class="content-panel">
    <h4>Users</h4>
    <hr />
    <table class="table table-striped table-advance table-hover">
        <thead>
            <tr>
                <th class="hidden"></th>
                <th>Username</th>
                <th>Email</th>
                <th>Email Confirmed</th>
                <th>Created Date</th>
                <th>Last Login Date</th>
                <th><i class="fa fa-lock"></i></th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
            <tr>
                <td class="hidden key">@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.EmailConfirmed.ToString()</td>
                <td>@user.CreatedDate</td>
                <td>@user.LastLoginDate</td>
                <td>@(user.LockoutEndDateUtc != null && user.LockoutEndDateUtc > DateTime.UtcNow ? "<i class='fa fa-check' style='color:green'></i>" : "")</td>
                <td class="flex-container center">
                    <a href="@Url.Action("EditUser", new { id = user.Id })"><i class="fa fa-pencil"></i></a>
                    <a href="@Url.Action("DeleteUser", new { id = user.Id })"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>