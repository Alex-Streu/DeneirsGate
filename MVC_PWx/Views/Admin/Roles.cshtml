@model List<ApplicationRole>
@{
    ViewBag.Title = "Roles";
}

<div class="content-panel">
    <div class="flex-container space-between">
        <label class="text-large">Roles</label>
        <a class="btn btn-default" href="@Url.Action("EditRole")"><i class="fa fa-plus"></i></a>
    </div>
    <hr />
    <table class="table table-striped table-advance table-hover">
        <thead>
            <tr>
                <th class="hidden"></th>
                <th>Name</th>
                <th>Priviledge</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
            <tr>
                <td class="hidden key">@role.Id</td>
                <td>@role.Name</td>
                <td>@role.Priviledge</td>
                <td class="flex-container center">
                    <a href="@Url.Action("EditRole", new { id = role.Id })"><i class="fa fa-pencil"></i></a>
                    <a href="@Url.Action("DeleteRole", new { id = role.Id })"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>